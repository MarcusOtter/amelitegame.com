// Component Imports
import Landing from '../components/Landing.astro';
import Awards from '../components/Awards.astro';
// You can import components from any supported Framework here!


// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'My Astro Site';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<style global>
		@import "../styles/base.css";
	</style>

	<style>
		p {
			max-width: 80ch;
			margin: auto;
			color: #eee;
			margin-top: 2rem;
		}

		main {
			background-color: #411733;
			position: relative;
			padding: 2ch;
		}

		.background0 {
			position: absolute;
			bottom: 25vh;
			z-index: 1;
			width: 100%;
		}
	</style>

	<script type="module">
		const targets = document.querySelectorAll(".scroll");
		window.addEventListener("scroll", () => {

			const offset = window.scrollY / 10;

			targets.forEach(target => {
				const posY = offset * target.dataset.speed;
				target.style.transform = `translateY(${posY}px)`;
			})
		});
	</script>
</head>
