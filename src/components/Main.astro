<style>
	@font-face {
		font-family: 'Diablogue';
		src: url('/assets/fonts/DiablogueRegular.woff2') format('woff2'),
			url('/assets/fonts/DiablogueRegular.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	p {
		margin: auto;
		color: #fbf9da;
		margin-bottom: 1.5rem;
		text-align: left;
	}

	main {
		background-color: #411733;
		position: relative;
		max-width: 1920px;
		margin: auto;
		text-align: center;
	}

	.background0 {
		margin-top: -100%;
		width: 100%;
		padding-bottom: calc(2ch - 4px);
		user-select: none;
		pointer-events: none;
	}

	.hero {
		text-align: center;
	}

	.cta {
		display: flex;
		justify-content: center;
		gap: 1rem;
		margin-bottom: 2rem;
		/* flex-direction: column; */
	}

	#content {
		max-width: 80ch;
		margin: 0 auto;
		padding: 2ch;
		padding-top: 0;
	}

	iframe {
		margin-bottom: 2ch;
	}
</style>
