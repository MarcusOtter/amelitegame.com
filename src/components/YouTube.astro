---
export interface Props {
	id: string;
	alt: string;
}

const { id, alt } = Astro.props;

---
<lite-youtube videoid={id} playlabel={alt} style="background-image: url('/img/trailer-img.png');" params="modestbranding=1&rel=0">
<!-- do not remove this comment -->
</lite-youtube>

<script>
	document.querySelector("lite-youtube").addEventListener("click", () => plausible("Trailer click"))
</script>

<style>
	lite-youtube {
		max-width: unset;
		transform: scale(1.2);
		margin: 3em auto 5.5em auto;
	}

	lite-youtube::before {
		display: none;
	}

	@media screen and (max-width: 1000px) {
		lite-youtube {
			transform: unset;
			margin: 0.75em auto 2.5em auto;
		}
	}
</style>
