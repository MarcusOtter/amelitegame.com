<header>
	<img class="backdrop" src="/assets/img/backdrop.png" alt="" role="presentation"/>
	<img class="scroll background3" data-speed="6" src="/assets/img/bg3.png" alt="" role="presentation"/>
	<img class="scroll background2" data-speed="3" src="/assets/img/bg2.png" alt="" role="presentation"/>
	<img class="scroll background1" data-speed="1" src="/assets/img/bg1.png" alt="" role="presentation"/>
	<img class="sun" src="/assets/img/sun.png" alt="" role="presentation"/>
	<img class="fg" src="/assets/img/fg.png" alt="" role="presentation"/> 
	<img class="crystal" src="/assets/img/crystal.png" alt="" role="presentation"/>
</header>

<style>
	header {
		height: calc(100vh - 250px);
		z-index: -1;
		display: block;
		position: relative;
	}

	header > img {
		position: fixed;
		height: 100vh;
		width: 100%;
		object-fit: cover;
		object-position: bottom;
		bottom: 250px;
	}

	.sun {
		mix-blend-mode: overlay;
	}

	.crystal {
		animation-name: bob;
		animation-duration: 2.5s;
		animation-iteration-count: infinite;
		animation-timing-function: ease-in-out;
	}

	@keyframes bob {
		0% { transform: translateY(0); }
		50% { transform: translateY(-15px); }
		100% { transform: translateY(0); }
	}
</style>
